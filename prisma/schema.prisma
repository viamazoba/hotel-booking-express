generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id                   String                @id @default(cuid())
  hotel_name           String                @unique
  hotel_img            String
  description          String
  new_price            Int
  previous_price       Int?
  phone                String
  hotel_type           Stars
  rooms                Room[]
  City_hotel           City_hotel[]
  Service_labels_hotel Service_label_hotel[]
}

model Room {
  id             String           @id @default(cuid())
  hotel          Hotel            @relation(fields: [hotelId], references: [id])
  hotelId        String
  room_name      String
  room_img       String
  new_price      Int
  previous_price Int?
  max_guests     Int?
  check_in       DateTime
  check_out      DateTime
  Inclusion_room Inclusion_room[]
  Amenity_room   Amenity_room[]
  // Room_user      Room_user[]
  user           User?            @relation(fields: [userId], references: [id])
  userId         String?
}

model Inclusion_room {
  id          String    @id @default(cuid())
  room        Room      @relation(fields: [roomId], references: [id])
  roomId      String
  inclusion   Inclusion @relation(fields: [inclusionId], references: [id])
  inclusionId String
}

model Inclusion {
  id             String           @id @default(cuid())
  inclusion_name String
  Inclusion_room Inclusion_room[]
}

model Amenity_room {
  id             String  @id @default(cuid())
  inclusion_name String  @unique
  room           Room    @relation(fields: [roomId], references: [id])
  roomId         String
  amenity        Amenity @relation(fields: [amenityId], references: [id])
  amenityId      String
}

model Amenity {
  id           String         @id @default(cuid())
  amenity_name String
  Amenity_room Amenity_room[]
}

